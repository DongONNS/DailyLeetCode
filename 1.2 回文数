class Solution {
    public boolean isPalindrome(int x) {
        if(x<0) return false;
        String str = x+"";
        int length = str.length();
        int[] arr = new int[length];
        
//      此处是实现将一个数字按数位放入数组中； 
        for(int i=0;i<length;i++){
            arr[i]=x%10;
            x/=10;
        }
//      比较数组中首位对应位置的数字是否相等；
        for(int j=0;j<=length/2;j++){
            if(arr[j]!=arr[length-j-1]){
                return false;
            }
        }
        return true;   
    }
}
